    "juans": [
        {
            "id": "j1135-1",
            "type": "bt",
            "content": [
                "\n\n\n        根本说一切有部毗奈耶尼陀那目得迦摄颂\n       \n\n"
            ]
        },
        {
            "id": "p-0",
            "type": "p",
            "content": [
                "尼陀那五十二颂。"
            ]
        },
        {
            "id": "p-1",
            "type": "p",
            "content": [
                "目得迦四十八颂。"
            ]
        },
        {
            "id": "p-2",
            "type": "p",
            "content": [
                "大门总摄颂曰　初明受近圆　　次分亡人物",
                "圆坛并户钩　　菩萨像五门"
            ]
        },
        {
            "id": "p-3",
            "type": "p",
            "content": [
                "别门初总摄颂曰(此有十事尽不截皮)",
                "近圆知日数　　界别不入地",
                "界边五众居　　不截皮生肉"
            ]
        },
        {
            "id": "p-4",
            "type": "p",
            "content": [
                "第一子摄颂曰　近圆男女状　　非近圆为师",
                "难等十无师　　莫授我七岁"
            ]
        },
        {
            "id": "p-5",
            "type": "p",
            "content": [
                "第二子摄颂曰　日数每应知　　告白夜须减",
                "六日十八日　　说戒不应频"
            ]
        },
        {
            "id": "p-6",
            "type": "p",
            "content": [
                "第三子摄颂曰　界别不告净　　亦不为羯磨",
                "乘空不持欲　　解前方结后"
            ]
        },
        {
            "id": "p-7",
            "type": "p",
            "content": [
                "第四子摄颂曰　不入界舍界(出放光说二颂)",
                "树界有世尊　　不越及可越　　羯磨者身死"
            ]
        },
        {
            "id": "p-8",
            "type": "p",
            "content": [
                "第五子摄颂曰　地墙等秉事　　结界无与欲",
                "但于一处坐　　得为四羯磨"
            ]
        },
        {
            "id": "p-9",
            "type": "p",
            "content": [
                "第六子摄颂曰　大界两驿半　　下水上山颠",
                "异见明相过　　五众受七日"
            ]
        },
        {
            "id": "p-10",
            "type": "p",
            "content": [
                "第七子摄颂曰　五众坐安居　　亲等请日去",
                "于经有疑问　　求解者应行"
            ]
        },
        {
            "id": "p-11",
            "type": "p",
            "content": [
                "第八子摄颂曰　假令不截衣　　有缘皆得着",
                "衣可随身量　　若短作篅衣"
            ]
        },
        {
            "id": "p-12",
            "type": "p",
            "content": [
                "第九子摄颂曰　不畜五种皮　　由有过失故",
                "开许得用处　　齐坐卧容身"
            ]
        },
        {
            "id": "p-13",
            "type": "p",
            "content": [
                "第十子摄颂曰　生肉及诸醋　　有五种不同",
                "痔病爪不伤　　回施知希望"
            ]
        },
        {
            "id": "p-14",
            "type": "p",
            "content": [
                "别门第二总摄颂曰　分亡及唱导",
                "张衣授学人　　重作收摄驱　　求寂同墙上"
            ]
        },
        {
            "id": "p-15",
            "type": "p",
            "content": [
                "第一子摄颂曰　分亡者衣物　　互无应互取",
                "见斗应须谏　　随头向处分"
            ]
        },
        {
            "id": "p-16",
            "type": "p",
            "content": [
                "第二子摄颂曰　唱导乘与车　　得衣应举掌",
                "僧伽获衣利　　凡圣可同分"
            ]
        },
        {
            "id": "p-17",
            "type": "p",
            "content": [
                "第三子摄颂曰　有张有不张　　有出有不出",
                "若在于界外　　闻生随喜心"
            ]
        },
        {
            "id": "p-18",
            "type": "p",
            "content": [
                "第四子摄颂曰　授学等不秉　　作法不成诃",
                "十二人成诃　　不净犯根本"
            ]
        },
        {
            "id": "p-19",
            "type": "p",
            "content": [
                "第五子摄颂曰　更应重作法　　勿使求寂行",
                "守护善用心　　见处离闻处"
            ]
        },
        {
            "id": "p-20",
            "type": "p",
            "content": [
                "第六子摄颂曰　收摄于界内　　于众心降伏",
                "截柱及门框　　尼等同驱摈"
            ]
        },
        {
            "id": "p-21",
            "type": "p",
            "content": [
                "第七子摄颂曰　破戒应驱逐　　伏处亦皆除",
                "恼俗应收谢　　余众咸同此"
            ]
        },
        {
            "id": "p-22",
            "type": "p",
            "content": [
                "第八子摄颂曰　与求寂令怖　　为受成近圆",
                "五法成就时　　五夏离依去"
            ]
        },
        {
            "id": "p-23",
            "type": "p",
            "content": [
                "第九子摄颂曰　同分非同分　　有齐限及无",
                "有覆无覆殊　　名一种便异"
            ]
        },
        {
            "id": "p-24",
            "type": "p",
            "content": [
                "第十子摄颂曰　不墙上行法　　非于一二三",
                "不对破戒人　　不取授学欲"
            ]
        },
        {
            "id": "p-25",
            "type": "p",
            "content": [
                "别门第三总摄颂曰　圆坛求寂堕",
                "一衣烟药器　　铁推发及门　　不应随铁作"
            ]
        },
        {
            "id": "p-26",
            "type": "p",
            "content": [
                "第一子摄颂曰　圆坛及天庙　　两驿半依止",
                "无钵不度人　　钵等不书字"
            ]
        },
        {
            "id": "p-27",
            "type": "p",
            "content": [
                "第二子摄颂曰　求寂堕钵破　　开余存念者",
                "作二种薰笼　　并随所须物"
            ]
        },
        {
            "id": "p-28",
            "type": "p",
            "content": [
                "第三子摄颂曰　一衣不互作　　澡浴可遮人",
                "于褥不剃头　　病人随服食"
            ]
        },
        {
            "id": "p-29",
            "type": "p",
            "content": [
                "第四子摄颂曰　烟筒坏色衣　　鼻筒饮水器",
                "针筒非宝物　　眼药合并椎"
            ]
        },
        {
            "id": "p-30",
            "type": "p",
            "content": [
                "第五子摄颂曰　药器及[毯-炎+瞿]毹　　承足枮泻药",
                "苾刍不应作　　当择死人衣"
            ]
        },
        {
            "id": "p-31",
            "type": "p",
            "content": [
                "第六子摄颂曰　铁椎并杵杓　　身自不负担",
                "以食供父母　　毛毯不充衣"
            ]
        },
        {
            "id": "p-32",
            "type": "p",
            "content": [
                "第七子摄颂曰　发爪窣睹波　　任作鲜白色",
                "随意安灯处　　一畔出高檐"
            ]
        },
        {
            "id": "p-33",
            "type": "p",
            "content": [
                "第八子摄颂曰　门户并檐屋　　及以塔下基",
                "赤石紫矿涂　　此等皆随作"
            ]
        },
        {
            "id": "p-34",
            "type": "p",
            "content": [
                "第九子摄颂曰　不应以橛钉　　及升窣睹波",
                "开许金银花　　塔上以舍盖"
            ]
        },
        {
            "id": "p-35",
            "type": "p",
            "content": [
                "第十子摄颂曰　铁作窣睹波　　及以金银等",
                "许幡旗供养　　并可用香油"
            ]
        },
        {
            "id": "p-36",
            "type": "p",
            "content": [
                "别门第四总摄颂曰　户镮随处用",
                "沾衣大小便　　染衣揁认衣　　赊衣果无净"
            ]
        },
        {
            "id": "p-37",
            "type": "p",
            "content": [
                "第一子摄颂曰　户镮倚带网　　取米为众食",
                "寺内作私房　　居人应受用"
            ]
        },
        {
            "id": "p-38",
            "type": "p",
            "content": [
                "第二子摄颂曰　随处当用物　　营作人所须",
                "器具食灯油　　随施主应用"
            ]
        },
        {
            "id": "p-39",
            "type": "p",
            "content": [
                "第三子摄颂曰　令雨沾僧物　　夜半共分床",
                "小座并依年　　敷席咸同此"
            ]
        },
        {
            "id": "p-40",
            "type": "p",
            "content": [
                "第四子摄颂曰　大小便利处　　经行不恼他",
                "洗足及拭鞋　　釜篦不夺用"
            ]
        },
        {
            "id": "p-41",
            "type": "p",
            "content": [
                "第五子摄颂曰　染釜及水瓶　　僧钵并饮器",
                "刀石爪鼻物　　支床不问年"
            ]
        },
        {
            "id": "p-42",
            "type": "p",
            "content": [
                "第六子摄颂曰　羯耻那衣揁　　絣线正缝时",
                "染汁杂物等　　用时不应夺"
            ]
        },
        {
            "id": "p-43",
            "type": "p",
            "content": [
                "第七子摄颂曰　外道覆认衣　　作记死时施",
                "有五种亲友　　得法独应行"
            ]
        },
        {
            "id": "p-44",
            "type": "p",
            "content": [
                "第八子摄颂曰　赊取他衣去　　及为他和市",
                "不高下买衣　　应二三酬价"
            ]
        },
        {
            "id": "p-45",
            "type": "p",
            "content": [
                "第九子摄颂曰　果园差修理　　四种不应分",
                "果熟现前分　　观时莫諠戏"
            ]
        },
        {
            "id": "p-46",
            "type": "p",
            "content": [
                "第十子摄颂曰　无净人自行　　自取不应食",
                "不选开其病　　结界证耕人"
            ]
        },
        {
            "id": "p-47",
            "type": "p",
            "content": [
                "别门第五总摄颂曰　菩萨像供养",
                "吉祥大众食　　大会草稕居　　集僧鸣大鼓"
            ]
        },
        {
            "id": "p-48",
            "type": "p",
            "content": [
                "第一子摄颂曰　听为菩萨像　　复许五种旗",
                "为座置尊仪　　铁干随意作"
            ]
        },
        {
            "id": "p-49",
            "type": "p",
            "content": [
                "第二子摄颂曰　供养菩萨像　　并作诸璎珞",
                "涂香及车舆　　作伞盖旗幡"
            ]
        },
        {
            "id": "p-50",
            "type": "p",
            "content": [
                "第三子摄颂曰　吉祥并供养　　花鬘及香合",
                "诸人大集时　　昼开门夜关"
            ]
        },
        {
            "id": "p-51",
            "type": "p",
            "content": [
                "第四子摄颂曰　大众集会食　　薜舍佉月生",
                "香台五六年　　并应为大会"
            ]
        },
        {
            "id": "p-52",
            "type": "p",
            "content": [
                "第五子摄颂曰　大会食草稕　　不应杂乱坐",
                "应打揵稚鼓　　告时令普知"
            ]
        },
        {
            "id": "p-53",
            "type": "p",
            "content": [
                "第六子摄颂曰　集僧鸣大鼓　　供了去幢幡",
                "若多获珍财　　随应悉分与"
            ]
        },
        {
            "id": "p-54",
            "type": "p",
            "content": [
                "大门总摄颂曰(目得迦四十八颂)　最初为忏谢",
                "第二定属物　　第三资具衣　　目得迦总颂"
            ]
        },
        {
            "id": "p-55",
            "type": "p",
            "content": [
                "别门第一总摄颂曰　忏谢草田中",
                "合免王影胜　　糖酥根等听　　狗肉盏甘蔗"
            ]
        },
        {
            "id": "p-56",
            "type": "p",
            "content": [
                "第一子摄颂曰　忏谢非近圆　　观求寂相貌",
                "苾刍与尼法　　若互秉皆成"
            ]
        },
        {
            "id": "p-57",
            "type": "p",
            "content": [
                "第二子摄颂曰　草田村略说　　生心褒洒陀",
                "贼缚不同愆　　六开僧教罪"
            ]
        },
        {
            "id": "p-58",
            "type": "p",
            "content": [
                "第三子摄颂曰　合免者应放　　穿渠遣众行",
                "一日至四旬　　皮肉皆不净"
            ]
        },
        {
            "id": "p-59",
            "type": "p",
            "content": [
                "第四子摄颂曰　影胜王床施　　王母物入僧",
                "乌燕鹤鹫雕　　苾刍不应食"
            ]
        },
        {
            "id": "p-60",
            "type": "p",
            "content": [
                "第五子摄颂曰　狗肉不应啖　　并食尸鸟兽",
                "及以同蹄畜　　亦不食猕猴"
            ]
        },
        {
            "id": "p-61",
            "type": "p",
            "content": [
                "第六子摄颂曰　小盏及衣角　　皮叶等有过",
                "除其铁一种　　余物任情为"
            ]
        },
        {
            "id": "p-62",
            "type": "p",
            "content": [
                "第七子摄颂曰　甘蔗酪肉麻　　药有四种别",
                "大麻蔓菁粥　　根等粥应餐"
            ]
        },
        {
            "id": "p-63",
            "type": "p",
            "content": [
                "第八子摄颂曰　开许沙糖饮　　得为七日药",
                "生心为五事　　益彼应共分"
            ]
        },
        {
            "id": "p-64",
            "type": "p",
            "content": [
                "第九子摄颂曰　医教应服酥　　油及余残触",
                "并开眼药合　　除十为净厨"
            ]
        },
        {
            "id": "p-65",
            "type": "p",
            "content": [
                "第十子摄颂曰　根茎叶花果　　皆应淡酒浸",
                "水搅而饮用　　并许其异食"
            ]
        },
        {
            "id": "p-66",
            "type": "p",
            "content": [
                "别门第二总摄颂曰　定物有主处",
                "须问憍萨罗　　从像豫先差　　大减会尼众"
            ]
        },
        {
            "id": "p-67",
            "type": "p",
            "content": [
                "第一子摄颂曰　定物不应移　　莫拾贼遗物",
                "尸林亦复尔　　随许并应收"
            ]
        },
        {
            "id": "p-68",
            "type": "p",
            "content": [
                "第二子摄颂曰　有主天庙物　　苾刍不应取",
                "看病人不应　　劝他舍法服"
            ]
        },
        {
            "id": "p-69",
            "type": "p",
            "content": [
                "第三子摄颂曰　物须问施主　　众利可平分",
                "二大合均分　　余众应加减"
            ]
        },
        {
            "id": "p-70",
            "type": "p",
            "content": [
                "第四子摄颂曰　憍萨罗白叠　　佛子因餐麨",
                "室利笈多缘　　广论营造事"
            ]
        },
        {
            "id": "p-71",
            "type": "p",
            "content": [
                "第五子摄颂曰　从像入城中　　受吉祥施物",
                "旗鼓随情设　　苾刍皆不应"
            ]
        },
        {
            "id": "p-72",
            "type": "p",
            "content": [
                "第六子摄颂曰　豫先为唱令　　五众从行城",
                "应差掌物人　　尼无别轮法"
            ]
        },
        {
            "id": "p-73",
            "type": "p",
            "content": [
                "第七子摄颂曰　应差分物人　　上座宜准价",
                "不得辄酬直　　索价返还衣"
            ]
        },
        {
            "id": "p-74",
            "type": "p",
            "content": [
                "第八子摄颂曰　寺大减其层　　将衣者应用",
                "恐怖若止息　　准式用僧祇"
            ]
        },
        {
            "id": "p-75",
            "type": "p",
            "content": [
                "第九子摄颂曰　若有大聚会　　鸣鼓集众僧",
                "众大别为行　　检校人先食"
            ]
        },
        {
            "id": "p-76",
            "type": "p",
            "content": [
                "第十子摄颂曰　凡于尼众首　　应安一空座",
                "为待余苾刍　　孤苦勿增价"
            ]
        },
        {
            "id": "p-77",
            "type": "p",
            "content": [
                "第三别门总摄颂曰。"
            ]
        },
        {
            "id": "p-78",
            "type": "p",
            "content": [
                "资具衣愚痴　　若差不用俗",
                "正作长者施　　剃刀窣睹波",
                "饭酪叶承水　　及洗钵等事",
                "此之十二颂　　总摄要应知"
            ]
        },
        {
            "id": "p-79",
            "type": "p",
            "content": [
                "第一子摄颂曰　十三资具物　　牒名而守持",
                "自余诸长衣　　委寄应分别"
            ]
        },
        {
            "id": "p-80",
            "type": "p",
            "content": [
                "第二子摄颂曰　痴不了三藏　　此等十二人",
                "失性复本时　　诃言应采录"
